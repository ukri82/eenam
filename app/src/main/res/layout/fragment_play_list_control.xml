<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.candyz.eenam.player_area.PlayListControl">

    <com.andexert.library.RippleView
        android:id="@+id/ripple_view_play_list_control"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/enclosing_layout_media_ctrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/previous_video"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:drawable/ic_media_previous"
            android:backgroundTint="#021462"/>

        <Button
            android:id="@+id/pause_resume_video"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/previous_video"
            android:background="@android:drawable/ic_media_pause"
            android:backgroundTint="#021462"/>

        <Button
            android:id="@+id/next_video"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pause_resume_video"
            android:background="@android:drawable/ic_media_next"
            android:backgroundTint="#021462"/>
    </LinearLayout>

    <Button
        android:id="@+id/save_play_list"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/enclosing_layout_media_ctrl"
        android:background="@android:drawable/ic_menu_save"
        android:backgroundTint="#021462"/>

    <Spinner
        android:id="@+id/load_play_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="72dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/save_play_list"
        android:backgroundTint="#021462"/>

    <TextView
        android:id="@+id/marquee_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enclosing_layout_media_ctrl"/>
    </com.andexert.library.RippleView>


</RelativeLayout>
